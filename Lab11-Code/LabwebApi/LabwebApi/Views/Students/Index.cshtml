@model IEnumerable<LabWebApi.Models.Student>

@{
    ViewData["Title"] = "Student List";
}

<div class="container mt-4">
    <h2>Student List</h2>
    <p>
        <a href="@Url.Action("Create")" class="btn btn-primary">Add New Student</a>
        <a href="@Url.Action("AdultStudents")" class="btn btn-info">Filter Students (Age > 18)</a>
    </p>

    @if (Model.Any())
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>StudentId</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    <tr>
                        <td>@student.StudentId</td>
                        <td>@student.Name</td>
                        <td>@student.Age</td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = student.StudentId })" class="btn btn-sm btn-warning">Edit</a>
                            <a href="@Url.Action("Delete", new { id = student.StudentId })" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            No students found.
        </div>
    }
</div>

<style>
    .container {
        max-width: 800px;
    }
    h2 {
        color: #333;
        margin-bottom: 20px;
    }
</style>