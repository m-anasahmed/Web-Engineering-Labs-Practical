@model LabWebApi.Models.Student

@{
    ViewData["Title"] = "Add New Student";
}

<div class="container mt-4">
    <h2>Add New Student</h2>

    <form asp-action="Create" method="post" class="mt-4">
        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label">Student Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Age" class="form-label">Age</label>
            <input asp-for="Age" class="form-control" type="number" placeholder="Enter age" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Save Student</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </form>
</div>

<style>
    .container {
        max-width: 500px;
    }

    h2 {
        color: #333;
    }
</style>